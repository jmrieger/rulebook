#/usr/bin/env sh

rm -rf build/

mkdir build/

docker run --rm --volume "`pwd`:/data" -w /data/rulebook ncpapaintball/rulebook-builder Cover.md -o ../build/Cover.pdf
docker run --rm --volume "`pwd`:/data" -w /data/rulebook ncpapaintball/rulebook-builder Rulebook.md --toc --toc-depth=6 -H ../deeplist.tex -o ../build/Main.pdf
docker run --rm --volume "`pwd`:/data" ncpapaintball/rulebook-builder gs -dNOPAUSE -sDEVICE=pdfwrite -sOUTPUTFILE=build/rulebook.pdf -dBATCH build/Cover.pdf build/Main.pdf

rm build/Cover.pdf build/Main.pdf